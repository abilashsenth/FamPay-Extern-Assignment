<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FragmentMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/hero"
                    android:layout_width="wrap_content"
                    android:layout_height="100sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15.87dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/fampay"
                        android:layout_width="68.09sp"
                        android:layout_height="25sp"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15.87dp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="top"
                        android:text="@string/fampay"
                        android:textAppearance="@style/fampay" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="1sp"
                        android:layout_marginTop="15.87dp"
                        android:layout_toRightOf="@id/fampay"
                        android:src="@drawable/ic_fampay_logo" />

                </RelativeLayout>
            </FrameLayout>


            <FrameLayout
                android:id="@+id/FrameLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_rectangle" />

                <LinearLayout
                    android:id="@+id/LinearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/hc3_relativelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/hc3_innercard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="25sp"
                            android:layout_weight="1"                            card_view:cardBackgroundColor="#000000"
                            card_view:cardCornerRadius="6dp"
                            card_view:cardElevation="1sp">


                        </androidx.cardview.widget.CardView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/hc3_recyclerview"
                            android:layout_width="match_parent"
                            android:elevation="0sp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="10sp"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:nestedScrollingEnabled="false"
                            android:scrollbars="none"
                            android:visibility="visible" />

                    </RelativeLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hc6_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="2sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="none"
                        android:visibility="visible" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hc5_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:scrollbars="none"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:id="@+id/hc9_relativelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/hc9_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="20sp"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:scrollbars="none"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hc1_recyclerview_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:scrollbars="none"
                        android:visibility="visible" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/hc1_recyclerview_noscroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:scrollbars="none"
                        android:visibility="gone" />


                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>


</FrameLayout>